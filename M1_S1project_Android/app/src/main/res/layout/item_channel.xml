<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_channel_container"
    tools:context=".fragments.MainBoardFragment">

    <Button
        android:id="@+id/activation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        app:layout_constraintEnd_toStartOf="@+id/value"
        app:layout_constraintTop_toTopOf="@+id/value" />

    <EditText
        android:id="@+id/value"
        android:layout_width="112dp"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/input"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:checked="false"
        android:textOff="@string/modeVolt"
        android:textOn="@string/modeCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        app:layout_constraintStart_toEndOf="@+id/value"
        app:layout_constraintTop_toTopOf="@+id/value" />

</androidx.constraintlayout.widget.ConstraintLayout>